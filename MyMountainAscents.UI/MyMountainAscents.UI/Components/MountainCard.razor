<div class="card" style="width: 2500px; height: 350px; max-width:250px; max-height:350px">
    <div style="width:250px; height:200px">
        @if (imgSrc != null)
        {
            <img class="card-img-top" src="@imgSrc" alt="Image not found" style="max-height:100%; margin:auto; display:block; height:100%; object-fit:cover;">
        }
            else
            {
                <p>No image available for this mountain</p>
            }
    </div>
    <div class="card-body">
        <h4 class="card-title">@Mountain.Name</h4>
        <h6 class="card-subtitle text-muted">@Mountain.Height meter</h6>
        <h6 class="card-subtitle text-muted">@Mountain.Country</h6>
        <button @onclick="GoToDetails" class="btn btn-primary float-right">Details</button>
    </div>
</div>
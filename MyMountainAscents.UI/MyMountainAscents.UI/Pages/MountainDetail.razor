@page "/mountainDetail/{Id}"

<div style="text-align:center">
    @if (Mountain != null)
    {
        <img src="@imgSrc" alt="Card image cap" style="border-radius:50%">
        <h1 class="display-4">@Mountain.Name</h1>
        <br />
        <div class="d-flex justify-content-center">
            <div class="p-2">
                <button class="btn btn-primary">Add ascent</button>
            </div>
            <div class="p-2">
                <button class="btn btn-danger">Delete mountain</button>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <div class="p-2" style="text-align:left">
                <p>Height: @Mountain.Height</p>
                <p>Ascents: @GetAscents()</p>
                <p>Country: @Mountain.Country</p>
            </div>
            <div class="p-2">
                <AscentList Ascents="@Mountain.Ascents" />
            </div>
        </div>


    }
</div>

